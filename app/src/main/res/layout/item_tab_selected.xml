<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


   <RelativeLayout
       android:paddingLeft="@dimen/common10dp"
       android:layout_marginTop="@dimen/common16dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:scaleType="centerCrop"
           android:src="@drawable/tag_icon"
           />

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/quit"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:paddingTop="@dimen/common10dp"
           android:paddingBottom="@dimen/common10dp"
           android:paddingRight="@dimen/common16dp"
           android:paddingLeft="@dimen/common16dp"
           />


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="胃病"
           android:layout_centerVertical="true"
           android:layout_centerInParent="true"
           />
   </RelativeLayout>


</LinearLayout>